@model List<ResultBlogDto>

@*
    _BlogsByCategoryLatestBlogsComponent
*@
<div class="sidebar-box">
	<h3 class="heading">Son Eklenen Bloglar</h3>
	<div class="post-entry-sidebar">
		<ul>
			@foreach (var item in Model)
			{
				<li>
					
					<a href="">
						<img src="@item.CoverImage" alt="Image placeholder" class="me-4 rounded">
						<div class="text">
							<h4>@item.Title</h4>
							<div class="post-meta">
								<span class="mr-2">@item.CreatedDate.ToString("dd/MM/yyyy HH:mm")</span>
							</div>
						</div>
					</a>
				</li>
			}
		</ul>
	</div>
</div>
