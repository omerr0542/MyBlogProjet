@model LoginDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}


<div class="container">
    <h3>Giriş Yap</h3>
    <form method="post">
        <div class="form-group">
            <label>Kullanıcı Adı:</label>
            <input type="text" class="form-control" asp-for="UserName" required/>
        </div>

        <div class="form-group">
            <label>Şifre:</label>
            <input type="password" class="form-control" asp-for="Password" required />
        </div>
    <span class="text-danger">@Html.ValidationSummary()</span>

    <br />
    <button class="btn btn-outline-primary">Giriş Yap</button>
    <br />
    <br />
    </form>
</div>

