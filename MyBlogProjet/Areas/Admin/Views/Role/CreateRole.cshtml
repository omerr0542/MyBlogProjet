@model AppRole
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h3>Yeni Rol Oluştur</h3>
    
    <form method="post">
        <label>Rol Adı</label>
        <input type="text" asp-for="Name" class="form-control" required />

        <br />
        <span class="text-danger">@Html.ValidationSummary()</span>

        <button class="btn btn-outline-primary">Kaydet</button>
    </form>
</div>


