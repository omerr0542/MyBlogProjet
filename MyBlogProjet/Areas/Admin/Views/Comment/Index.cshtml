@model IList<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Blog Yorumları</h3>

@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Blog Id</th>
        <th>Yorum Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.BlogId</td>
            <td>@item.Content</td>
            <td>
                <a asp-area="Admin" asp-controller="Comment" asp-action="DeleteComment" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                <a asp-area="Admin" asp-controller="Comment" asp-action="UpdateComment" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Güncelle</a>
            </td>
        </tr>
    }

</table>

<a asp-area="Admin" asp-controller="Comment" asp-action="CreateComment" class="btn btn-success">Yeni Yorum Ekle</a>