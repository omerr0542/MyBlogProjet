@model IList<ResultBlogDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<h3>Index</h3>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Blog İçeriği</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td> <img src="@item.CoverImage" style="height: 75px; width:75px;"/>  @item.Title</td>
            <td>@item.Description</td>
            <td>@item.Category.Name</td>
            <td>
                <a asp-area="Admin" asp-controller="Blog" asp-action="UpdateBlog" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm">Düzenle</a>
                <button type="button" class="btn btn-outline-danger btn-sm btn-delete" data-id="@item.Id">Sil</button>
            </td>
        </tr>
    }
</table>

<a asp-area="Admin" asp-controller="Blog" asp-action="CreateBlog" class="btn btn-outline-primary">Blog Yazısı Ekle</a>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteButtons = document.querySelectorAll(".btn-delete");

            deleteButtons.forEach(button => {
                button.addEventListener("click", function () {
                    const id = this.getAttribute("data-id");

                    Swal.fire({
                        title: 'Emin misiniz?',
                        text: "Bu blog yazısı silinecek!",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Evet, sil!',
                        cancelButtonText: 'Vazgeç'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Silme isteğini yönlendir
                            window.location.href = `/Admin/Blog/DeleteBlog/${id}`;
                        }
                    });
                });
            });
        });
    </script>
}